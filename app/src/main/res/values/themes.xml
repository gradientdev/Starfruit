<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Starfruit" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/coral</item>
        <item name="colorPrimaryVariant">@color/darkcoral</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondcolor</item>
        <item name="colorSecondaryVariant">@color/tealdark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="actionBarTheme">@style/CustomToolbarTheme</item>

        <item name="android:timePickerDialogTheme">@style/TimeTheme</item>
    </style>

    <style name="CustomToolbarTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@color/white</item>
        <item name="android:textColorPrimary">@color/coal</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/pulpdisplay</item>
    </style>

    <style name="SplashTheme" parent="Theme.Starfruit">
        <item name="android:windowBackground">@drawable/splashscreen</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorSurface">@color/white</item>
        <item name="materialAlertDialogTitleTextStyle">@style/TitleTextStyle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/BodyTextStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>
    <style name="TitleTextStyle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/coal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">26sp</item>
        <item name="fontFamily">@font/pulpdisplay</item>
    </style>
    <style name="BodyTextStyle" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@color/subtitle</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/pulpdisplay</item>
    </style>
    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/coral</item>
        <item name="rippleColor">@color/coral</item>
        <item name="fontFamily">@font/pulpdisplay</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BottomBarTheme">
        <item name="fontFamily">@font/pulpdisplay</item>
    </style>

    <style name="TimeTheme" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="fontFamily">@font/pulpdisplay</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="ThemeOverlay.Starfruit.AppWidgetContainer" parent="">
        <item name="appWidgetBackgroundColor">@color/white</item>
        <item name="appWidgetTextColor">@color/coal</item>
    </style>

</resources>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Starfruit" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/coral</item>
        <item name="colorPrimaryVariant">@color/darkcoral</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondcolor</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="actionBarTheme">@style/CustomToolbarTheme</item>
    </style>

    <style name="CustomToolbarTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@color/white</item>
        <item name="android:textColorPrimary">@color/coal</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/pulpdisplay</item>
    </style>

    <style name="SplashTheme" parent="Theme.Starfruit">
        <item name="android:windowBackground">@drawable/splashscreen</item>
    </style>

    <style name="BottomBarTheme">
        <item name="fontFamily">@font/pulpdisplay</item>
    </style>

</resources>
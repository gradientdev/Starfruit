<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    tools:context=".SettingsFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/roundededges"
            android:fontFamily="@font/pulpdisplay"
            android:padding="10sp"
            android:text="@string/settingstext"
            android:textAlignment="center"
            android:textColor="@color/subtitle"
            android:textSize="15sp" />

        <RelativeLayout
            android:id="@+id/timeModule"
            android:layout_width="match_parent"
            android:layout_height="125sp"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/roundededges"
            android:padding="10sp">

            <TextView
                android:id="@+id/alarmText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:contentDescription="CardImageViewDesc"
                android:fontFamily="@font/pulpdisplay"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_star"
                android:text="Sends at 0:00"
                android:textColor="@color/coal"
                android:textSize="35sp"
                android:textStyle="bold"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/timeButton"
                android:layout_width="220sp"
                android:layout_height="50sp"
                android:layout_alignParentBottom="true"
                android:layout_margin="5dp"
                android:fontFamily="@font/pulpdisplay"
                android:text="Set daily quote"
                android:textAllCaps="false"
                android:textSize="16sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/notificationModule"
            android:layout_width="match_parent"
            android:layout_height="125sp"
            android:layout_below="@+id/timeModule"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/roundededges"
            android:padding="10sp">

            <TextView
                android:id="@+id/notificationText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:contentDescription="CardImageViewDesc"
                android:fontFamily="@font/pulpdisplay"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_star"
                android:text="Widgets"
                android:textColor="@color/coal"
                android:textSize="35sp"
                android:textStyle="bold"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/notificationButton"
                android:layout_width="220sp"
                android:layout_height="50sp"
                android:layout_alignParentBottom="true"
                android:layout_margin="5dp"
                android:fontFamily="@font/pulpdisplay"
                android:text="How to set up"
                android:textAllCaps="false"
                android:textSize="16sp" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/newQuoteModule"
            android:layout_width="match_parent"
            android:layout_height="125sp"
            android:layout_below="@+id/notificationModule"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/roundededges"
            android:padding="10sp">

            <TextView
                android:id="@+id/newQuoteText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:contentDescription="CardImageViewDesc"
                android:fontFamily="@font/pulpdisplay"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_star"
                android:text="New quote"
                android:textColor="@color/coal"
                android:textSize="35sp"
                android:textStyle="bold"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/newQuoteButton"
                android:layout_width="220sp"
                android:layout_height="50sp"
                android:layout_alignParentBottom="true"
                android:layout_margin="5dp"
                android:fontFamily="@font/pulpdisplay"
                android:text="Get a new quote"
                android:textAllCaps="false"
                android:textSize="16sp" />


        </RelativeLayout>

    </RelativeLayout>

</FrameLayout>
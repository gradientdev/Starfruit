<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    tools:context=".SettingsFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/roundededges"
            android:fontFamily="@font/pulpdisplay"
            android:padding="10sp"
            android:text="@string/settingstext"
            android:textAlignment="center"
            android:textColor="@color/subtitle"
            android:textSize="15sp" />

        <TextView
            android:layout_width="300sp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="180sp"
            android:fontFamily="@font/pulpdisplay"
            android:text="What phone number do you want to receive your message?"
            android:textAlignment="center"
            android:textSize="17sp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/phonePicker"
            android:layout_width="300sp"
            android:layout_height="50sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="270sp"
            android:fontFamily="@font/pulpdisplay"
            android:hint="+12223334444"
            android:inputType="phone"
            android:textAlignment="center" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/saveButton"
            android:layout_width="170sp"
            android:layout_height="60sp"
            android:layout_alignBottom="@+id/smsButton"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="90sp"
            android:layout_marginBottom="80sp"
            android:fontFamily="@font/pulpdisplay"
            android:text="Save"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textStyle="bold" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/smsButton"
            android:layout_width="170sp"
            android:layout_height="60sp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50sp"
            android:fontFamily="@font/pulpdisplay"
            android:text="Test SMS"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textStyle="bold" />

    </RelativeLayout>

</FrameLayout>
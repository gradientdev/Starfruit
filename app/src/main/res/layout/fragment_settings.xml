<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    tools:context=".SettingsFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/roundededges"
            android:fontFamily="@font/pulpdisplay"
            android:padding="10sp"
            android:text="@string/settingstext"
            android:textAlignment="center"
            android:textColor="@color/subtitle"
            android:textSize="15sp" />

        <RelativeLayout
            android:id="@+id/timeModule"
            android:layout_width="match_parent"
            android:layout_height="140sp"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/roundededges"
            android:padding="8sp">

            <TextView
                android:id="@+id/alarmText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:contentDescription="CardImageViewDesc"
                android:fontFamily="@font/pulpdisplay"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_star"
                android:text="0:00 AM"
                android:textColor="@color/coal"
                android:textSize="50sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/timeButton"
                android:layout_width="100sp"
                android:layout_height="50sp"
                android:layout_alignParentBottom="true"
                android:layout_margin="5dp"
                android:fontFamily="@font/pulpdisplay"
                android:text="Set"
                android:textAllCaps="false"
                android:textSize="16sp" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="100sp"
                android:layout_height="50sp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="4dp"
                android:layout_toEndOf="@+id/timeButton"
                android:fontFamily="@font/pulpdisplay"
                android:text="Remove"
                android:textAllCaps="false"
                android:textSize="16sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/notificationModule"
            android:layout_width="match_parent"
            android:layout_height="140sp"
            android:layout_below="@+id/timeModule"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/roundededges"
            android:padding="8sp">

            <TextView
                android:id="@+id/notificationText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:contentDescription="CardImageViewDesc"
                android:fontFamily="@font/pulpdisplay"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_star"
                android:text="Notifications"
                android:textColor="@color/coal"
                android:textSize="50sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/notificationButton"
                android:layout_width="220sp"
                android:layout_height="50sp"
                android:layout_alignParentBottom="true"
                android:layout_margin="5dp"
                android:fontFamily="@font/pulpdisplay"
                android:text="Test"
                android:textAllCaps="false"
                android:textSize="16sp" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/referralModule"
            android:layout_width="match_parent"
            android:layout_height="140sp"
            android:layout_below="@+id/notificationModule"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/roundededges"
            android:padding="8sp">

            <TextView
                android:id="@+id/referralText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:contentDescription="CardImageViewDesc"
                android:fontFamily="@font/pulpdisplay"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_star"
                android:text="Referrals [0]"
                android:textColor="@color/coal"
                android:textSize="50sp" />

            <TextView
                android:id="@+id/referralCode"
                android:layout_width="210sp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/referralText"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="5sp"
                android:layout_marginBottom="5sp"
                android:layout_toEndOf="@+id/copyButton"
                android:background="@drawable/roundededgesdark"
                android:fontFamily="@font/pulpdisplay"
                android:gravity="center"
                android:text="lawrenceville code"
                android:textSize="18sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/copyButton"
                android:layout_width="100sp"
                android:layout_height="50sp"
                android:layout_alignParentBottom="true"
                android:layout_margin="5dp"
                android:fontFamily="@font/pulpdisplay"
                android:text="Copy"
                android:textAllCaps="false"
                android:textSize="16sp" />


        </RelativeLayout>


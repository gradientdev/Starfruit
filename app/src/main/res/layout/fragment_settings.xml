<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SettingsFragment"
    android:layout_margin="10dp">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Settings"
            android:textAlignment="center"
            android:textColor="@color/coal"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settingstext"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60sp"
            android:textSize="15sp"
            android:textColor="@color/coal"/>

        <TextView
            android:layout_width="300sp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:textSize="17sp"
            android:layout_marginTop="200sp"
            android:text="What phone number do you want to receive your message?"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/phonePicker"
            android:layout_width="300sp"
            android:layout_height="50sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="270sp"
            android:inputType="phone"
            android:textAlignment="center"
            android:hint="+12223334444" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/smsButton"
            android:layout_width="170sp"
            android:layout_height="60sp"
            android:text="Test SMS"
            android:textSize="20sp"
            android:layout_alignTop="@+id/homeInfo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="360sp"/>

    </RelativeLayout>

</FrameLayout>